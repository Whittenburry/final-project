        {{#link-to "dashboard.home" action toggleMenu "menu"}}<li class="dashboard-menu__list-item solefood">Discover</li>{{/link-to}}
        {{#link-to "logout" action toggleMenu "menu"}}<li class="dashboard-menu__list-item solefood">Logout</li>{{/link-to}}
      </ul>
