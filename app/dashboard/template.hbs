  <div class="dashboard-nav">
    <button {{action toggleMenu}} id="burger" class="fa fa-bars dashboard-nav__hamburger"></button>
    {{!-- {{#if menu}} --}}
    <div class="menu-container">
      <ul class="dashboard-menu">
        {{#link-to "dashboard.recipes.new" action toggleMenu "menu"}}<li class="dashboard-menu__list-item solefood">Add New Recipe</li>{{/link-to}}
