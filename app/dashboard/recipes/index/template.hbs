<div class="headline-text-container">
  <div class="headline-text">
    <h1 class="solefood add-new-recipe-text">All Recipes</h1>
  </div>
</div>

<div class="add-recipe-container">
  {{#link-to "dashboard.recipes.new"}}New Recipe{{/link-to}}

  <tbody>
    {{#each model as |recipe|}}
      <tr>
        <td>{{recipe.id}}.</td>
        <td>
          {{#link-to "dashboard.recipes.detail" recipe.id}}
          <img src="{{recipe.image}}" alt="" width="250">
          {{/link-to}}
        </td>
        <td>{{recipe.name}}</td>
        <td>
          {{#link-to "dashboard.recipes.edit" recipe.id}}
            <span class="fa fa-pencil"></span>
          {{/link-to}}
        </td>
        <td>
          <button class="btn" {{action destroyRecipe recipe}}>
            <span class="fa fa-trash"></span>
          </button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</div>

{{outlet}}
